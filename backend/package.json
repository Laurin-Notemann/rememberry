{
  "name": "rememberry_backend",
  "scripts": {
    "build": "bun build --target=bun src/index.ts --outfile=dist/index.js",
    "start": "bun src/index.ts",
    "format": "prettier --write .",
    "dev": "bun --watch src/index.ts",
    "migrate:generate": "drizzle-kit generate:pg --schema=./src/db/schema.ts",
    "migration:push": "node -r esbuild-register src/db/migrate.ts",
    "migrate": "drizzle-kit generate:pg --schema=./src/db/schema.ts && node -r esbuild-register src/db/migrate.ts"
  },
  "dependencies": {
    "@trpc/client": "^10.38.1",
    "@trpc/server": "^10.38.1",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/pg": "^8.10.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "trpc": "^0.11.3",
    "typescript": "^5.2.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "bun-types": "^1.0.1",
    "drizzle-kit": "^0.19.13",
    "prettier": "2.8.4"
  }
}
