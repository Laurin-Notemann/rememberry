{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      ".git",
      "node_modules",
      ".pnp",
      ".pnp.js",
      "coverage",
      ".next/",
      "/out/",
      "build",
      ".DS_Store",
      "*.pem",
      "npm-debug.log*",
      "yarn-debug.log*",
      "yarn-error.log*",
      ".env*.local",
      ".vercel",
      "*.tsbuildinfo",
      "next-env.d.ts",
      "stories",
      ".storybook/main.ts",
      ".storybook/preview.ts",
      "components.json",
      "docker-compose.yml",
      "*.config.js",
      "*.config.ts",
      "package-lock.json",
      "postcss.config.js",
      "drizzle",
      "dist",
      "deployments",
      ".github",
      ".next"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "style": {
        "useNumberNamespace": "off",
        "useTemplate": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": "off"
      }
    },
    "ignore": ["./backend/src/logger.ts"]
  }
}
